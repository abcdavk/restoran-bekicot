---
import { Image } from "astro:assets";
import Bekicot from '../assets/bekicot.jpg';
import * as ImageLoader from '../scripts/imageLoader'
const { id_menu, nama, harga, deskripsi, kategori, status } = Astro.props;


---

<div class="card">
  <Image src={ImageLoader.images[id_menu-1] ?? Bekicot } alt="Bekicot" />
  <div class="card-content">
    <h3>{nama}</h3>
    <p>{deskripsi}</p>
    <span>Status: {status}</span> 
  </div>
  <a href={`/pesan?id_menu=${id_menu}`} class="btn">Rp {harga},00</a>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 250px;
    background-color: #f0f0f0;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    box-shadow: 0px 2px 4px rgb(0, 0, 0, 0.2);
    margin: 20px;
  }

  .card img {
    width: 100%;
    height: auto;
    transition: all 0.2s ease-in-out;
  }
  .card img:hover {
    transform: scale(1.1);
  }

  span {
    background-color: rgb(0, 0, 0, 0.5);
    color: #fff;
    padding: 2px 4px;
    border-radius: 4px;
    font-size: 12px;
  }

  .card-content {
    padding: 10px;
    line-height: 1.3;
    flex: 1;
  }

  .btn {
    display: block;
    padding: 8px 16px;
    width: 100%;
    background-color: #333;
    text-decoration: none;
    margin-top: auto;
    color: #fff;
    transition: all 0.4s ease-in-out;
  }

  .btn:hover {
    background-color: #EF2917;
  }
</style>