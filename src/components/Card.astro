---
import { Image } from "astro:assets";
import Bekicot from '../assets/bekicot.jpg';

const { nama, harga, deskripsi, kategori, status } = Astro.props;
---

<div class="card">
  <Image src={Bekicot} alt="Bekicot" />
  <div class="card-content">
    <h3>{nama}</h3>
    <p>{deskripsi}</p>
  </div>
  <a href="" class="btn">Rp {harga},00</a>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 250px;
    background-color: #f0f0f0;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0px 2px 4px rgb(0, 0, 0, 0.2);
    margin: 20px;
  }

  .card img {
    width: 100%;
    height: auto;
  }

  .card-content {
    padding: 10px;
    line-height: 1.3;
    flex: 1;
  }

  .btn {
    display: block;
    padding: 8px 16px;
    width: 100%;
    background-color: #333;
    text-decoration: none;
    margin-top: auto;
    color: #ffffff;
  }
</style>