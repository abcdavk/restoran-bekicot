---
import Card from './Card.astro'
import { getMenuDB } from '../scripts/database'

const { kategori } = Astro.props;

console.log(kategori)

const { res: menus } = await getMenuDB(kategori) as any;
---

<div>
    <!-- <div class="kategori">
        <a href="?kategori=makanan">Makanan</a>
        <a href="?kategori=minuman">Minuman</a>
        <a href="?kategori=semua">Semua</a>
    </div> -->
    <div class="container">
        {
            menus?.map((menu: any) => <Card id_menu={menu.id_menu} nama={menu.nama} harga={menu.harga} deskripsi={menu.deskripsi} deskripsi={menu.deskripsi} kategori={menu.kategori} status={menu.status} />)
        }
    </div>
</div>

<style>
    .container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 25px;
    }
    .kategori {
        display: flex;
        justify-content: center;
        margin: 10px;
        padding: 30px 0px;
        background-color: #333;
        color: #fff;
        border-radius: 8px;
        gap: 40px;
    }

    .kategori a {
        color: #fff;
        text-decoration: none;
        transition: all 0.4s ease-in-out;
        padding: 15px;
        background-color: rgb(0, 0, 0, 0.4);
    }

    .kategori a:hover {
        color: #000;
        background-color: #fff;
    }
</style>